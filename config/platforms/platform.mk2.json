{
    "config_version": 1,
    "info": {
        "name": "mk2",
        "full_name": "TBD MK2",
        "description": "TBD Eurorack module with plenty of inputs",
        "mark": 2,
        "rev": 1
    },
    "config": {
        "system": "esp32",
        "arch": "esp32",
        "cv_input": {
            "type": "stm32",
            "n_cvs": 22,
            "n_triggers": 12,
            "pins": {
                "cs": 15,
                "mosi": 13,
                "miso": 12,
                "sclk": 14
            }
        },
        "audio": {
            "type": "wm8978",
            "volume_control": true,
            "pins": {
                "spi": {
                    "cs": 5,
                    "mosi": 23,
                    "miso": 18,
                    "clk": -1
                },
                "i2s": {
                    "bclk": 21,
                    "adcdat": 27,
                    "dacdat": 22,
                    "lrclk": 19
                }
            }
        },
        "indicator": {
            "type": "rgb",
            "pins": {
                "red": 26,
                "green": 4,
                "blue": 25
            }
        },
        "inputs": {
            "type": "gpio",
            "button": 34,
            "trigger0": 39,
            "trigger1": 36
        },
        "apis": ["wifi"],
        "file_system": "wrapper",
        "display": {
            "type": "ssd1306_i2c",
            "pins": {
                "sda": 33,
                "scl": 32,
                "reset": -1
            }
        },
        "network": true
    }
}
