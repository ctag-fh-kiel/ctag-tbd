{
    "config_version": 1,
    "info": {
        "name": "bba2",
        "full_name": "TBD BBA V2",
        "description": "TBD Black Box Audio standalone MIDI device",
        "mark": 1,
        "rev": 2
    },
    "config": {
        "system": "esp32",
        "arch": "esp32s3",
        "cv_input": {
            "type": "midi",
            "n_cvs": 90,
            "n_triggers": 40,
            "inputs": ["uart", "usb"]
        },
        "audio": {
            "type": "aic3254",
            "pins": {
                "i2c": {
                    "sda": 41,
                    "scl": 40
                },
                "i2s": {
                    "mclk": 39,
                    "bclk": 45,
                    "ws": 1,
                    "dout": 2,
                    "din": 21
                }
            }
        },
        "indicator": {
            "type": "neopixel",
            "pins": {
                "dout": 38
            }
        },
        "inputs": {
            "type": "gpio",
            "button": -1,
            "trigger0": -1,
            "trigger1": -1
        },
        "apis": [{
            "type": "rest"
        }],
        "file_system": "wrapper",
        "display": {
            "type": "ssd1306_i2c",
            "pins": {
                "sda": 5,
                "scl": 4,
                "reset": -1
            }
        },
        "network": true
    }
}
