{%- if endpoint.in_message == 'str_par' or endpoint.out_message == 'str_par' -%}
{{ _str_handler_wrapper_impl(endpoint) }}
{%- else -%}
{{ _handler_wrapper_impl(endpoint) }}
{%- endif -%}
{%- endmacro -%}